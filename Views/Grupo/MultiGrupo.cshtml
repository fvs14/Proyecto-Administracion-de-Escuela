@* @model List<Asignatura> *@
@model IEnumerable<Grupo>

<body>
    
    <section class="main-section">
        <div class="caja">
            <strong>Lista de Grupos</strong>
            <table class="table table-dark table-hover">
                <thead >
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Jornada</th>
                  
                </tr>
                </thead>
                <tbody>
                @foreach (var grupo in Model)
                {
                    <tr>
                        <td>@grupo.Id</td>
                        <td>@grupo.Nombre</td>
                        <td>@grupo.Jornada</td>
                      
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </section>
    </div>
    
</body>