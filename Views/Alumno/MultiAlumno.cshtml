@* @model List<Alumno> *@
@model IEnumerable<Alumno>

<body>
    
   
    @* <h3>@ViewBag.Saludo</h3>
    <h3>@ViewData["Saludo"]</h3> *@
    <section class="main-section">
        <div class="caja">
           <strong>Lista de Alumnos</strong>
            <table class="table table-dark table-hover">
                <thead >
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Id Grupo</th>
                    <th scope="col">Nombre</th>
                   
                </tr>
                </thead>
                <tbody>
                @foreach (var alumno in @Model)
                {
                    <tr>
                        <td>@alumno.Id</td>
                        <td>@alumno.GrupoId</td>
                        <td>@alumno.Nombre</td>
                       
                        
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </section>
    </div>
    
</body>







